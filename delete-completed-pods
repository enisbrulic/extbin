#!/bin/sh

if [ -z $1 ]; then
  echo "usage: `basename "$0"` <my-oc-project>"
else
count=$(oc get pods -owide -n $1 | awk '($3=="Completed")' | wc -l)
  if [ $count == 0 ]
  then
     echo "currently no pods found with completed state in project $1."
  else
     oc get pods -owide -n $1 | awk '($3=="Completed")' | awk '{ print $1 }' | xargs -n1 sh -c 'oc delete pod $0 -n $1'
     echo "-> $count pod(s) deleted successfully on project $1"
  fi
fi

